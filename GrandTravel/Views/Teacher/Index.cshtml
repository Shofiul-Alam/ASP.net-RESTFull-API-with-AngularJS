@model IList<GrandTravel.Entity.Teacher>
@{
    ViewBag.Title = "Teachers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<a href="@Url.Action("Create")">Create new lessons</a>
<table border="1">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>
                    @teacher.Id
                </td>
                <td>
                    @teacher.Name
                </td>
                <td>
                    <a href="@Url.Action("Update",new { id = teacher.Id })">Edit</a>
                    <a href="@Url.Action("Delete",new { id = teacher.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
